<?xml version="1.0" encoding="UTF-8" ?>
<modelconfiguration>
    <model>
        <class>org.mmadsen.sim.transmissionlab.models.NeutralCTModel</class>
        <options>
            <batch>false</batch>
        </options>
    </model>
    <datacollection>
        <collector>
            <class>org.mmadsen.sim.transmissionlab.analysis.TraitFrequencyAnalyzer</class>
            <schedulegroup>DataCollectorScheduleType.EACH_TICK</schedulegroup>
            <schedulegrouporder>1</schedulegrouporder>
        </collector>
        <collector>
            <class>org.mmadsen.sim.transmissionlab.analysis.OverallStatisticsRecorder</class>
            <schedulegroup>DataCollectorScheduleType.END</schedulegroup>
            <schedulegrouporder>1</schedulegrouporder>
        </collector>
    </datacollection>
    <population>
        <class>org.mmadsen.sim.transmissionlab.population.SingleTraitPopulationFactory</class>
    </population>
    <ruleset>
        <rule>
            <class>org.mmadsen.sim.transmissionlab.rules.WrightFisherTransmissionRule</class>
            <ruleorder>1</ruleorder>
        </rule>
        <rule>
            <class>org.mmadsen.sim.transmissionlab.rules.RandomAgentInfiniteAllelesMutation</class>
            <ruleorder>2</ruleorder>
        </rule>
    </ruleset>
</modelconfiguration>
